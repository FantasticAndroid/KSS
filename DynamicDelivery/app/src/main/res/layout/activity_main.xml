<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <Button

        android:id="@+id/feature2Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Feature 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_marginBottom="20dp"
        android:id="@+id/feature1Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Feature 1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/feature2Btn" />


    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/featureOtherBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Feature Other"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feature2Btn" />

</androidx.constraintlayout.widget.ConstraintLayout>